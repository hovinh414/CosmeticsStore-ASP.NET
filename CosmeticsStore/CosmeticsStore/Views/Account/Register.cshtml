
@model CosmeticsStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<link href="~/Content/assets/styles/login_style.css" rel="stylesheet" type="text/css" media="all" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container" style="margin-top:160px">
    <div class="header-main">
        <h2 style="color:black; text-align:left">Đăng ký</h2>
        <div class="header-bottom">
            <div class="header-right w3agile">

                <div class="header-left-bottom agileinfo">
                    <section class="content" style="margin-top:20px;">

                        <!-- Default box -->
                        <div class="card">
                            <div class="card-body">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(false)
                                    @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label>Tên tài khoản</label>
                                    @Html.TextBoxFor(x => x.UserName, new { @type = "text" })
                                </div>
                                    <div class="form-group">
                                        <label>Họ tên</label>
                                        @Html.TextBoxFor(x => x.FullName, new { @type = "name" })
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(x => x.Email, new { @type = "email" })
                                    </div>

                                    <div class="form-group">
                                        <label>Năm sinh</label>
                                        @Html.TextBoxFor(x => x.DateOfBirth, new { @type = "dayofbirth" })
                                    </div>

                                    <div class="form-group">
                                        <label>Giới tính</label>
                                        @Html.TextBoxFor(x => x.Sex, new { @type = "sex" })
                                    </div>

                                    <div class="form-group">
                                        <label>Phone</label>
                                        @Html.TextBoxFor(x => x.Phone, new { @type = "phone" })
                                    </div>


                                    <div class="form-group">
                                        <label>Mật khẩu</label>
                                        @Html.PasswordFor(x => x.Password, new { @type = "password" })
                                    </div>
                                    <div class="form-group">
                                        <label>Nhập lại mật khẩu</label>
                                        @Html.PasswordFor(x => x.ConfirmPassword, new { @type = "password" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit"  value="Đăng Ký" />
                                    </div>
                                }
                            </div>
                            <!-- /.card-body -->
                            <!-- /.card-footer-->
                        </div>
                        <!-- /.card -->

                    </section>
                </div>
            </div>
         </div>
    </div>
</div>            
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
