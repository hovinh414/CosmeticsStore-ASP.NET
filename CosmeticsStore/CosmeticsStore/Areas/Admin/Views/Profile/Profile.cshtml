@model CosmeticsStore.Models.ApplicationUser
@using CosmeticsStore.Models
@{
    ViewBag.Id = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/styles/profile_style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" integrity="sha512-ZnR2wlLbSbr8/c9AgLg3jQPAattCUImNsae6NHYnS9KrIwRdcY9DxFotXhNAKIKbAXlRnujIqUWoXXwqyFOeIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link"><font color="white">Trang chủ</font></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/profile" class="nav-link"><font color="white">Hồ sơ cá nhân</font></a>
        </li>
    </ul>
}
<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row" style="padding-top:10px">
                <div class="col-md-5">
                    <div class="container1">
                        <div class="box">
                            <header class="box_header">
                                <div class="yourFile">
                                    <p>My Profile</p>
                                </div>
                            </header>
                            <section class="box_info">
                                <div class="avatar">
                                    <img src="@Html.DisplayFor(model => model.Images)" alt="">
                                    <input type="file" name="" id="form_file">
                                </div>
                                <div class="info">
                                    <p><b class="name">@Html.DisplayFor(model => model.UserName)</b></p>
                                    <p><b class="name">@Html.DisplayFor(model => model.FullName)</b></p>
                                </div>
                            </section>
                            <section class="box_info">
                                <div class="info" style="text-align: left">
                                    <p><b>Năm sinh:</b><b class="float-right">@Html.DisplayFor(model => model.DateOfBirth)</b></p>
                                    <p><b>Giới tính:</b><b class="float-right">@Html.DisplayFor(model => model.Sex)</b></p>
                                    <p><b>Phone:</b><b class="float-right">@Html.DisplayFor(model => model.Phone)</b></p>
                                    <p><b>Email:</b><b class="float-right">@Html.DisplayFor(model => model.Email)</b></p>
                                </div>
                            </section>
                        </div>
                    </div>  
                </div>
                <!-- /.col -->
                <div class="col-md-7">
                    <div class="container1">
                        <div class="box">
                            <header class="box_header">
                                <div class="yourFile">
                                    <p>Edit My Profile</p>
                                </div>
                            </header>
                            <section class="box_info">
                                @using (Html.BeginForm("Profile", "Profile", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(false)
                                    @Html.AntiForgeryToken()
                                    <form class="form-horizontal" action="@Url.Action("Profile", "Profile", new { account = Model as ApplicationUser})">
                                        <div class="form-group row" style="margin:2px">
                                            <label class="col-sm-4 col-form-label">Tên tài khoản:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "input", @placeholder = "Tên tài khoản" })
                                                @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row"style="margin:2px">
                                            <label for="inputName" class="col-sm-4 col-form-label">Họ và Tên:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.FullName, new { @class = "input", @placeholder = "Họ tên" })
                                                @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row"style="margin:2px">
                                            <label for="inputBirth" class="col-sm-4 col-form-label">Năm sinh:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "input", @placeholder = "Năm sinh" })
                                                @Html.ValidationMessageFor(x => x.DateOfBirth, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row"style="margin: 2px">
                                            <label for="inputSex" class="col-sm-4 col-form-label">Giới tính:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.Sex, new { @class = "input", @placeholder = "Giới tính" })
                                                @Html.ValidationMessageFor(x => x.Sex, null, new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row"style="margin: 2px">
                                            <label for="inputPhone" class="col-sm-4 col-form-label">Số điện thoại:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.Phone, new { @class = "input", @placeholder = "Số điện thoại" })
                                                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row"style="margin: 2px">
                                            <label for="inputEmail" class="col-sm-4 col-form-label">Email:</label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "input", @placeholder = "Email" })
                                                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row"style="margin: 2px">
                                            <label for="inputEmail" class="col-sm-4 col-form-label">Ảnh đại diện:</label>
                                            <div class="input-group col-sm-8">
                                                <div class="custom-file">
                                                    @Html.EditorFor(model => model.Images, "Ảnh đại diện", new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="input-group-append">
                                                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*"
                                                           style="display:none;" />
                                                    <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />

                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row"style="margin:0">
                                            <div class="offset-sm-5 col-sm-5" style="padding-top:10px">
                                                <button type="submit" class="btn btn-danger">Lưu</button>
                                            </div>
                                        </div>
                                    </form>
                                }
                            </section>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</body>

@section upload
{
    <script>
        $(function () {
            $('#btnUpload').click(function () {
                $('#fileUpload').trigger('click');
            });
        });
        $('#fileUpload').change(function () {
            if (window.FormData !== undefined) {
                var fileUpload = $('#fileUpload').get(0);
                var files = fileUpload.files;
                var formData = new FormData();
                formData.append('file', files[0]);
                $.ajax(
                    {
                        type: 'POST',
                        url: '/Profile/ProcessUpload',
                        contentType: false,
                        processData: false,
                        data: formData,
                        success: function (urlImage) {
                            $('#pictureUpload').attr('src', urlImage);
                            $('#Images').val(urlImage);
                        },
                        error: function (err) {
                            alert('Error ', err.statusText);
                        }
                    });
            }
        });
    </script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
