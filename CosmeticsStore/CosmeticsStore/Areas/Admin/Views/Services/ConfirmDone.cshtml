</section>

<!-- Main content -->
<section class="content">
    <div class="main_content">
        <label for="phoneNumber">Nhập số điện thoại:</label>
        <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Nhập số điện thoại của khách hàng">
        <button id="btnConfirm">Xác nhận</button>

        <div style="text-align: center">
            <h2>Thông tin khách hàng:</h2>
            <p id="customerName"></p>
            <p id="serviceName"></p>
            <p id="date"></p>
        </div>

        <button id="completionButton" style="display: none;" class="cancel-appointment">Hoàn thành</button>
    </div>
</section>

<script>
        $(function () {
            $('#btnConfirm').click(function () {
                var phoneNumber = $('#phoneNumber').val();
                if (phoneNumber) {
                    // Send AJAX request to fetch customer information
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("GetCustomerInfo", "Services")', // Replace with the actual URL to fetch customer information
                        data: { phoneNumber: phoneNumber },
                        success: function (result) {
                            if (result.success) {
                                // Display customer information
                                $('#customerName').text(result.customerName);
                                $('#serviceName').text(result.serviceName);
                                $('#date').text(result.date);
                                $('#completionButton').show().data('id', result.code);
                                // Show the completion button
                                $('#completionButton').show();
                            } else {
                                // Handle the case when customer information is not found
                                alert(result.message);
                            }
                        },
                        error: function () {
                            alert('Có lỗi xảy ra khi lấy thông tin khách hàng. Vui lòng thử lại sau.');
                        }
                    });
                }
            });

        });
        function doneAppointment(code) {
        if (confirm('Khách hàng đã có mặt?')) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("DoneAppointment", "Services")',
                data: { code: code },
                success: function (result) {
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra khi xác nhận đặt lịch. Vui lòng thử lại sau.');
                }
            });
        }
    }


    $(function () {
        $('body').on('click', '#completionButton', function () {
            var id = $(this).closest('tr').find('.cancel-appointment').data('id');
            var code = $(this).data('id');
            doneAppointment(code);
        });
    });
</script>